// Mahesh College Counseling - Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  name          String?
  role          String    @default("client") // "client" | "admin"
  applicantId   String?   @unique @map("applicant_id")
  applicant     Applicant? @relation(fields: [applicantId], references: [id])
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@map("users")
}

model Applicant {
  id              String      @id @default(cuid())
  fullName        String      @map("full_name")
  email           String
  instagram       String?
  school          String?
  classYear       String      @map("class_year")
  gpa             String?
  activities      String?
  whatMakesUnique String?     @map("what_makes_unique")
  whyMentorship   String?     @map("why_mentorship")
  status          String      @default("Applied") // Applied, Waitlist, Accepted, Rejected, Paid, Active
  score           Int?
  adminNotes      String?     @map("admin_notes")
  cohortId        String?     @map("cohort_id")
  cohort          Cohort?     @relation(fields: [cohortId], references: [id])
  user            User?
  files           ClientFile[]
  messages        Message[]
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")

  @@map("applicants")
}

model Cohort {
  id        String      @id @default(cuid())
  name      String      @default("Current Cohort")
  maxSeats  Int         @default(20) @map("max_seats")
  applicants Applicant[]

  @@map("cohorts")
}

model ClientFile {
  id          String    @id @default(cuid())
  applicantId String    @map("applicant_id")
  applicant   Applicant @relation(fields: [applicantId], references: [id], onDelete: Cascade)
  filename    String
  url         String
  type        String   // essay, resume, other
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("client_files")
}

model Message {
  id          String    @id @default(cuid())
  applicantId String    @map("applicant_id")
  applicant   Applicant @relation(fields: [applicantId], references: [id], onDelete: Cascade)
  content     String
  fromAdmin   Boolean  @default(false) @map("from_admin")
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("messages")
}
